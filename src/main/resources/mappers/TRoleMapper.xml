  <!-- 查询所有的角色列表 -->
  <select id="queryAllRoles" parameterType="int" resultType="java.util.Map">
    SELECT DISTINCT
      r.rid id,
      r.role_desc AS roleName,
      CASE
        WHEN IFNULL(temp.id,0) = 0 THEN ''
        ELSE 'selected'
        END
      AS 'selected'
    FROM
      t_role r
        INNER JOIN ( SELECT r.rid id FROM t_role r LEFT JOIN t_user_role ur ON r.rid = ur.roleid
            ) temp ON r.rid = temp.id
  </select>



